<!DOCTYPE html>
<html>
  <head>
    <title>RBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="../index.html"><h1>rBlog<span> /Manager</span></h1></a>
                <%= link_to "rBlog", root_path %>
                <%= render 'partials/admin/search' %>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item <%= params[:controller] == 'admin/posts' ? 'active' : ''  %>"><%= link_to "Posts", admin_posts_path %></li>
                    <li class="nav-item <%= params[:controller] == 'admin/categories' ? 'active' : ''  %>"><%= link_to "Categories", admin_categories_path %></li>
                    <li class="nav-item <%= params[:controller] == 'admin/users' ? 'active' : ''  %>"><%= link_to "Users", admin_users_path %></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown link
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div id="user_nav" class="pull-right">
                                <% if current_user %>
                                    Logged In As: <%= current_user.email %>
                                    <%= link_to "Logout", admin_logout_path %>
                                <% else %>
                                    <%= link_to "Logout", admin_login_path %>
                                <% end %>
                            </div>
                            <div class="clearfix">
                                <!-- Alerts & Messages -->
                                <% if flash[:notice] %>
                                    <div class="alert alert-success"><%= flash[:notice] %></div>
                                <% end %>
                                <% if flash[:alert] %>
                                    <div class="alert alert-danger"><%= flash[:alert] %></div>
                                <% end %>
                            </div>
                          </div>
                        <%= yield %>
                      </div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <p>Copyright &copy; 2014, rBlog | <a href="login.html"><%= link_to "Front-End", root_path, target: '_blank' %></a></p>
        </footer>
  </body>
</html>